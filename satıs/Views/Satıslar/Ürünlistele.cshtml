
@{
    ViewBag.Title = "Ürünlistele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-warning">

        <div class="panel-heading">
            Ürünler Tablosu
        </div>

        <div class="panel-body">
            <a href="/Satıslar/Ürünekle" class="btn btn-success"> <i class="fa fa-pencil"> </i> Yeni Kayıt </a>  
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Ürün Resim</th>
                            <th>Kategori Adı</th>
                            <th>Ürün Barkod</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Özellikleri</th>
                            <th>Ürün Fiyat</th>
                            <th>İşlemler</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                       @foreach (satıs.Models.ürünler u in Model)
                       {
                        <tr>
                            <td><img width="100" height="100" src="/up/@u.ürünfoto"/></td>                         
                            <td> @u.katid </td>
                            <td> @u.ürünbarkod </td>
                            <td> @u.ürünad </td> 
                            <td> @u.ürünozellik </td>                         
                            <td> @u.ürünfiyat </td>
                   
                        
                            <td> <a href="/Satıslar/Ürüngüncelle/@u.ürünid" class="btn btn-primary"> <i class="fa fa-edit "> </i> Güncelle </a>  </td>
                            <td> <a href="/Satıslar/Ürünsil/@u.ürünid" class="btn btn-danger"> <i class="fa fa-pencil"> </i> Sil </a>  </td>
                         </tr>   
                           
                       }
                     
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!--End Advanced Tables -->
</div>